<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/tools_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tools_activity_lib_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/tushuguan" />

        <RelativeLayout
            android:id="@+id/tools_activity_lib_search_real"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/tools_activity_lib_editText"
                android:hint="馆藏检索"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/tools_activity_lib_search"
                android:background="@drawable/edit_search_bg"
                android:maxLines="1" />

            <Button
                android:id="@+id/tools_activity_lib_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_search_bg_sel" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tools_lib_bottom" >

            <ImageButton
                android:id="@+id/tools_activity_lib_bt"
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/tools_lib_wojiedeshubt" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>