<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/viewXPageTitleHeight"
    android:background="@drawable/tools_actionbar"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/tools_top_leftbutton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/tools_top_left_bt"
        android:onClick="back" />

    <TextView
        android:id="@+id/tools_top_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/viewXPageTitleHeight"
        android:layout_centerInParent="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxEms="5"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/tools_top_rightbutton"
        android:layout_width="@dimen/viewXPageTitleBtnWidth"
        android:layout_height="@dimen/viewXPageTitleHeight"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent" />

</RelativeLayout>