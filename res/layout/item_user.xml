<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3" >

    <us.dobell.xtools.XImageView
        android:id="@+id/itemUserHeadXimg"
        android:layout_width="@dimen/itemUserHeadXimgSize"
        android:layout_height="@dimen/itemUserHeadXimgSize"
        android:layout_gravity="center_vertical"
        android:src="@drawable/image_ximg_head" />

    <TextView
        android:id="@+id/itemUserNickTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3" />

</LinearLayout>